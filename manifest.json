{
  "manifest_version": 3,
  "name": "Tony번역",
  "version": "1.0",
  "description": "웹 페이지의 외국어를 한국어로 번역합니다.",
  "permissions": [
    "scripting", 
    "activeTab",
    "contextMenus",
    "notifications",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://translate-worker.redofyear2.workers.dev/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/cache-manager.js",
        "utils/usage-manager.js",
        "utils/dom/dom-selector.js",
        "utils/dom/dom-observer.js", 
        "utils/dom/dom-manipulator.js",
        "utils/batch/batch_engine.js",
        "utils/translator-service.js",
        "utils/ui-manager.js",
        "utils/dom/dom-handler.js",
        "content-script.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
          "16": "icons/translate_16.png",
          "48": "icons/translate_48.png",
          "128": "icons/translate_128.png"
      }
  },
  "icons": {
    "16": "icons/translate_16.png",
    "48": "icons/translate_48.png",
    "128": "icons/translate_128.png"
  }
}